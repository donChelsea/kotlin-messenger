<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorPrimaryBlue">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/newmessage_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newmessage_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/this_will_say_user_s_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorNeutralGrey"
        app:layout_constraintStart_toEndOf="@id/newmessage_image"
        app:layout_constraintTop_toTopOf="@+id/newmessage_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
