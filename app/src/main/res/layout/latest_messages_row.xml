<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/latestmessages_profile_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/latestmessages_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/latestmessages_profile_image"
        app:layout_constraintTop_toTopOf="@+id/latestmessages_profile_image" />

    <TextView
        android:id="@+id/latestmessages_preview_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/preview_of_the_chat_message"
        android:maxLines="2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/latestmessages_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/latestmessages_username_text" />


</androidx.constraintlayout.widget.ConstraintLayout>